<Window x:Class="CourseProgect_Planeta35.Pages.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый пользователь"
        Height="450" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Padding="16" Background="White" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel>

            <TextBlock x:Name="FormTitle" Text="Новый пользователь"
                       FontSize="16" FontWeight="Bold"/>

            <StackPanel Margin="0,8,0,0">

                <TextBlock Text="Имя (ФИО) *"/>
                <TextBox x:Name="TbFullName" Margin="0,4,0,8"/>

                <TextBlock Text="Логин (username) *"/>
                <TextBox x:Name="TbUsername" Margin="0,4,0,8"/>

                <TextBlock Text="Пароль"/>
                <PasswordBox x:Name="PbPassword" Margin="0,4,0,8"/>

                <TextBlock Text="Роль *"/>
                <ComboBox x:Name="CbRole" Margin="0,4,0,8"
                          DisplayMemberPath="Name" SelectedValuePath="Id"/>

                <TextBlock Text="Подразделение"/>
                <ComboBox x:Name="CbDepartment" Margin="0,4,0,8"
                          DisplayMemberPath="Name" SelectedValuePath="Id"/>

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="Сохранить" Width="110" Margin="0,0,8,0"
                            Click="BtnSave_Click"/>
                    <Button Content="Отмена" Width="90"
                            Click="BtnCancel_Click"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>
    </Border>
</Window>
