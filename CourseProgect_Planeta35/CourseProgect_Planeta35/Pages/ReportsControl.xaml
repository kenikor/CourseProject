<UserControl x:Class="CourseProgect_Planeta35.Controls.ReportsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:CourseProgect_Planeta35.Models"
             Background="#F5F1E9">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" >

            <!-- Заголовок -->
            <TextBlock Text="Отчёты" FontSize="24" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Формирование отчётов по имуществу и инвентаризации" Foreground="Gray" Margin="0,0,0,15"/>

            <!-- Фильтры -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock Text="Тип отчёта:" VerticalAlignment="Center"/>
                <ComboBox x:Name="ReportTypeCombo" Width="200" SelectionChanged="ReportTypeCombo_SelectionChanged">
                    <ComboBoxItem Content="Имущество" Tag="inventory"/>
                    <ComboBoxItem Content="Инвентаризация" Tag="inventory-check"/>
                </ComboBox>

                <TextBlock Text="Категория:" VerticalAlignment="Center"/>
                <ComboBox x:Name="CategoryFilterCombo" Width="150" SelectionChanged="Filters_Changed"/>

                <TextBlock Text="Подразделение:" VerticalAlignment="Center"/>
                <ComboBox x:Name="DepartmentFilterCombo" Width="150" SelectionChanged="Filters_Changed"/>

                <TextBlock Text="Статус:" VerticalAlignment="Center"/>
                <ComboBox x:Name="StatusFilterCombo" Width="150" SelectionChanged="Filters_Changed"/>
            </StackPanel>

            <!-- Кнопки экспорта -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" >
                <Button Content="Экспорт в PDF" Click="ExportPdf_Click" Width="120"/>
                <Button Content="Экспорт в Excel" Click="ExportExcel_Click" Width="120"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="ReportDataGrid" AutoGenerateColumns="True" Height="400"/>
        </StackPanel>
    </Grid>
</UserControl>
