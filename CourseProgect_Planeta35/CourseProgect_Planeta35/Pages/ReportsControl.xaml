<UserControl x:Class="CourseProgect_Planeta35.Controls.ReportsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CourseProgect_Planeta35.Controls"
             Background="#F5F1E9">

    <UserControl.Resources>
        <!-- Карточка -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Статус-бэйдж -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2,0,6"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="#8B9B4C"/>
        </Style>

        <!-- Кнопки -->
        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#3C2F1F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Комбо-бокс -->
        <Style TargetType="ComboBox" x:Key="LiveComboBox">
            <Setter Property="Foreground" Value="#3C2F1F"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#8B9B4C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                                <DockPanel LastChildFill="True">
                                    <ContentPresenter x:Name="ContentSite"
                                                      Margin="4,2,0,2"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      RecognizesAccessKey="True"/>
                                    <ToggleButton DockPanel.Dock="Right"
                                                  x:Name="DropDownToggle"
                                                  Focusable="False"
                                                  IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                  ClickMode="Press"
                                                  Background="#8B9B4C"
                                                  BorderThickness="0"
                                                  Width="26"
                                                  HorizontalAlignment="Right"
                                                  Content="▼"
                                                  Foreground="White"
                                                  FontWeight="Bold"/>
                                </DockPanel>
                            </Border>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="#8B9B4C"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        SnapsToDevicePixels="True">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#8B9B4C"/>
                                <Setter TargetName="Border" Property="Background" Value="#F5F1E9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Отчёты" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="Формирование отчётов по имуществу и результатам инвентаризации" Foreground="#8B9B4C"/>
        </StackPanel>

        <!-- Настройки отчёта -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <TextBlock Text="Тип отчёта" Width="140" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CbReportType" Width="240" SelectionChanged="CbReportType_SelectionChanged"
                              Style="{StaticResource LiveComboBox}">
                        <ComboBoxItem Content="Общий отчет по имуществу" />
                        <ComboBoxItem Content="Отчет по результатам инвентаризации" />
                    </ComboBox>

                    <TextBlock Text="Категория" Width="100" Margin="16,0,0,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CbCategory" Width="200" DisplayMemberPath="Name" SelectedValuePath="Id"
                              Style="{StaticResource LiveComboBox}"/>

                    <TextBlock Text="Подразделение" Width="120" Margin="16,0,0,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CbDepartment" Width="200" DisplayMemberPath="Name" SelectedValuePath="Id"
                              Style="{StaticResource LiveComboBox}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Статус" Width="140" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CbStatus" Width="200" Style="{StaticResource LiveComboBox}">
                        <ComboBoxItem Content="Все" />
                        <ComboBoxItem Content="В эксплуатации" />
                        <ComboBoxItem Content="На обслуживании" />
                        <ComboBoxItem Content="Списано" />
                        <ComboBoxItem Content="Отсутствует" />
                    </ComboBox>

                    <Button Content="Обновить" Width="110" Margin="12,0,0,0" Style="{StaticResource CardButton}" Click="BtnRefresh_Click"/>
                    <Button Content="Сбросить" Width="110" Margin="8,0,0,0" Style="{StaticResource CardButton}" Click="BtnResetFilters_Click"/>
                    <Button Content="Экспорт PDF" Width="120" Margin="8,0,0,0" Style="{StaticResource CardButton}" Click="BtnExportPdf_Click"/>
                    <Button Content="Экспорт XLSX" Width="120" Margin="8,0,0,0" Style="{StaticResource CardButton}" Click="BtnExportXlsx_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Предпросмотр -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <DataGrid x:Name="DataGridPreview" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Asset.Name}" Width="*"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Asset.Description}" Width="2*"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Asset.Category.Name}" Width="*"/>
                    <DataGridTextColumn Header="Подразделение" Binding="{Binding Asset.Department.Name}" Width="*"/>
                    <DataGridTextColumn Header="Ответственное лицо" Binding="{Binding Asset.Responsible.FullName}" Width="*"/>
                    <DataGridTextColumn Header="Серийный номер" Binding="{Binding Asset.InventoryNumber}" Width="*"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Asset.Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Информация о выбранных/найденных объектах -->
        <TextBlock Grid.Row="3" Text="{Binding PreviewInfo}" Margin="0,8,0,0" Foreground="#666"/>
    </Grid>
</UserControl>
