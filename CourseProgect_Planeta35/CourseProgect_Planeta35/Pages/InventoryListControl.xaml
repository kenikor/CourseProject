<UserControl x:Class="CourseProgect_Planeta35.Controls.InventoryListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:CourseProgect_Planeta35.Models"
             Background="#F5F1E9">

    <UserControl.Resources>
        <!-- Бэйдж статуса -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2,0,6"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="#8B9B4C"/>
        </Style>

        <!-- Карточка -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопки в карточках -->
        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#3C2F1F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Поисковая строка -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="35,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D2D5C4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="White" BorderBrush="#D2D5C4" BorderThickness="1" CornerRadius="10"/>
                            <TextBlock Text="🔍" FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="35,0,0,0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Заголовок страницы -->
        <TextBlock Text="Инвентарь"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="#3C2F1F"
                   Margin="30,30,424,0"
                   VerticalAlignment="Top"/>

        <!-- Верхняя фиксированная панель поиска и фильтров -->
        <DockPanel LastChildFill="False" Background="#F5F1E9" Margin="30,80,30,0" VerticalAlignment="Top">
            <!-- Строка поиска -->
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource SearchBox}"
                     TextChanged="SearchBox_TextChanged"
                     Width="560"
                     DockPanel.Dock="Top"
                     FontSize="16"
                     Padding="0,5,0,0"
                     Margin="0,0,0,10"/>

            <!-- Фильтры и кнопка добавить -->
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0" DockPanel.Dock="Top">
                <StackPanel Width="200">
                    <TextBlock Text="Категория" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CategoryFilter"
                              SelectionChanged="CategoryFilter_SelectionChanged"/>
                </StackPanel>

                <StackPanel Width="200" Margin="20,0,0,0">
                    <TextBlock Text="Статус" Margin="0,0,0,4"/>
                    <ComboBox x:Name="StatusFilter"
                              SelectionChanged="StatusFilter_SelectionChanged">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="В эксплуатации"/>
                        <ComboBoxItem Content="На обслуживании"/>
                        <ComboBoxItem Content="Списано"/>
                        <ComboBoxItem Content="Отсутствует"/>
                    </ComboBox>
                </StackPanel>

                <!-- Кнопка добавить -->
                <Button Content="➕ Добавить"
                        Width="120"
                        Height="30"
                        Margin="20,15,0,0"
                        Background="#8B9B4C"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="AddButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Карточки инвентаря под панелью -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="30,188,30,22">
            <StackPanel>
                <TextBlock x:Name="SubTitleText"
                           Text="0 объектов найдено"
                           FontSize="15"
                           Foreground="#8B9B4C"
                           Margin="0,0,0,20"/>
                <ItemsControl x:Name="ItemsGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:InventoryItem}">
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel Margin="12">

                                    <Image Source="{Binding ImagePathToShow}" 
                                           Width="150" Height="100" 
                                           Stretch="UniformToFill"
                                           Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="{Binding Asset.Name}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#333"/>
                                    <TextBlock Text="Категория:" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Asset.Category.Name}" Margin="0,0,0,6"/>
                                    <TextBlock Text="Подразделение:" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Asset.Department.Name}" Margin="0,0,0,6"/>
                                    <TextBlock Text="Статус:" FontWeight="Bold"/>
                                    <Border Style="{StaticResource StatusBadge}">
                                        <TextBlock Text="{Binding Asset.Status}" Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="Стоимость:" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Asset.Cost, StringFormat={}{0:N0} ₽}" 
                                               Foreground="#3C2F1F"
                                               FontSize="15"
                                               Margin="0,0,0,15"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="🗑 Удалить" Style="{StaticResource CardButton}" Click="DeleteButton_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
