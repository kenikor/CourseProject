<Window x:Class="CourseProgect_Planeta35.Controls.AddAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить объект"
        Height="550" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#F5F1E9"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Общий стиль TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#D2D5C4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Общий стиль ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D2D5C4"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Стиль кнопок -->
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="BorderBrush" Value="#D2D5C4"/>
            <Setter Property="Background" Value="#8B9B4C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль кнопки отмены -->
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource MainButton}">
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="Foreground" Value="#3C2F1F"/>
        </Style>
    </Window.Resources>

    <!-- Основная панель -->
    <Border CornerRadius="16" Background="#8B9B4C" Padding="20" Margin="10" >
        <StackPanel>
            <TextBlock Text="Добавить объект" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="White"/>

            <TextBlock Text="Название" Foreground="White"/>
            <TextBox x:Name="NameBox"/>

            <TextBlock Text="Категория" Foreground="White"/>
            <ComboBox x:Name="CategoryBox"/>

            <TextBlock Text="Статус" Foreground="White"/>
            <ComboBox x:Name="StatusBox">
                <ComboBoxItem Content="В эксплуатации"/>
                <ComboBoxItem Content="На обслуживании"/>
                <ComboBoxItem Content="Списано"/>
                <ComboBoxItem Content="Отсутствует"/>
            </ComboBox>

            <TextBlock Text="Серийный номер" Foreground="White"/>
            <TextBox x:Name="SerialBox"/>

            <TextBlock Text="Дата покупки" Foreground="White"/>
            <DatePicker x:Name="PurchaseDateBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Стоимость" Foreground="White"/>
            <TextBox x:Name="CostBox"/>

            <TextBlock Text="Местоположение (Отдел)" Foreground="White"/>
            <ComboBox x:Name="LocationBox"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена" Width="80" Style="{StaticResource CancelButton}" Click="Cancel_Click"/>
                <Button Content="Добавить" Width="80" Style="{StaticResource MainButton}" Click="Add_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
