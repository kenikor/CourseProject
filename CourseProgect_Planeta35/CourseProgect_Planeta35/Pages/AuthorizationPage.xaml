<Page x:Class="CourseProgect_Planeta35.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseProgect_Planeta35.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage"
      Background="#F5F1E9">

    <Page.Resources>
        <Style x:Key="TabButtonStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Padding="8" CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="#C3C3C3" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#8B9B4C"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="18" ShadowDepth="3" Opacity="0.25"/>
    </Page.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <!-- Header -->
            <StackPanel HorizontalAlignment="Center" Margin="0 0 0 20">
                <Border Background="#8B9B4C" Width="70" Height="70" CornerRadius="20" Margin="0 0 0 10"
                    Effect="{StaticResource ShadowEffect}">
                    <TextBlock Text="📦" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Система учёта имущества" FontSize="18" Foreground="#3C2F1F" HorizontalAlignment="Center"/>
                <TextBlock Text="Управление инвентарём вашей организации" FontSize="12" Foreground="#6B7A35" TextAlignment="Center"/>
            </StackPanel>

            <!-- Form Container -->
            <Border Background="White" CornerRadius="20" Padding="20" Effect="{StaticResource ShadowEffect}">
                <StackPanel HorizontalAlignment="Center">

                    <!-- Tabs -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 15">
                        <ToggleButton x:Name="LoginTab" Content="Вход" Width="120" Margin="0 0 10 0"
                                  Style="{StaticResource TabButtonStyle}" Checked="LoginTab_Checked"/>
                        <ToggleButton x:Name="RegisterTab" Content="Регистрация" Width="120"
                                  Style="{StaticResource TabButtonStyle}" Checked="RegisterTab_Checked"/>
                    </StackPanel>

                    <!-- Name Field (Registration only) -->
                    <StackPanel x:Name="RegisterNameField" Visibility="Collapsed" Margin="0 0 0 10">
                        <TextBlock Text="Имя" FontWeight="SemiBold"/>
                        <TextBox x:Name="NameBox" Width="250" Height="28" Padding="5" Margin="0 2 0 10"
                             BorderBrush="#C3C3C3" BorderThickness="1" Background="#FAFAFA" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Email -->
                    <TextBlock Text="Email" FontWeight="SemiBold" Margin="0 5 0 0"/>
                    <TextBox x:Name="EmailBox" Width="250" Height="28" Padding="5" Margin="0 2 0 10"
                         BorderBrush="#C3C3C3" BorderThickness="1" Background="#FAFAFA" HorizontalAlignment="Center"/>

                    <!-- Password -->
                    <TextBlock Text="Пароль" FontWeight="SemiBold" Margin="0 5 0 0"/>
                    <PasswordBox x:Name="PasswordBox" Width="250" Height="28" Padding="5" Margin="0 2 0 10"
                             BorderBrush="#C3C3C3" BorderThickness="1" Background="#FAFAFA" HorizontalAlignment="Center"/>

                    <!-- Error -->
                    <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0 0 0 10" Visibility="Collapsed" FontWeight="SemiBold" TextAlignment="Center"/>

                    <!-- Submit -->
                    <ToggleButton Content="Продолжить"  Background="#8B9B4C" Foreground="White" Style="{StaticResource TabButtonStyle}"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="Submit_Click" HorizontalAlignment="Center" Width="120" Margin="0 0 10 0"/>

                    <ToggleButton Content="Вход как гость" Background="#8B9B4C" Foreground="White" FontWeight="Bold" Style="{StaticResource TabButtonStyle}" BorderThickness="0" Cursor="Hand" 
                            HorizontalAlignment="Center" Width="120" Margin="0 5 10 0" Click="GuestLogin_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
