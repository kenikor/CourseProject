<UserControl x:Class="CourseProgect_Planeta35.Controls.AddUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:CourseProgect_Planeta35.Converters"
             Background="#F5F1E9">

    <UserControl.Resources>
        <conv:FirstCharConverter x:Key="FirstCharConverter" />
    </UserControl.Resources>


    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Список пользователей -->
        <Border Grid.Column="0" Padding="10" Margin="6"
                Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
            <StackPanel>

                <!-- Заголовок -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <TextBlock Text="Пользователи" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Users.Count, StringFormat=' — {0}'}"
                               Margin="8,0,0,0" Foreground="#666"/>
                    <Button Content="Добавить" Width="100"
                            HorizontalAlignment="Right" Margin="12,0,0,0"
                            Click="BtnAdd_Click"/>
                </StackPanel>

                <!-- Список -->
                <ListView x:Name="UsersListView"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          Margin="0,6,0,0">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Круглый аватар -->
                                    <Grid Width="36" Height="36">
                                        <Ellipse Fill="#4C8BF5"/>
                                        <TextBlock Text="{Binding FullName, Converter={StaticResource FirstCharConverter}}"
                                               Foreground="White" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- Информация -->
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding FullName}" FontWeight="SemiBold"/>
                                            <TextBlock Text=" "/>
                                            <TextBlock Text="{Binding Role.Name}"
                                                       Foreground="#555" Margin="6,0,0,0"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Username}"
                                                   Foreground="#666" FontSize="12"/>
                                    </StackPanel>

                                    <!-- Кнопки -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="Ред." Width="60" Margin="0,0,6,0"
                                                Click="BtnEdit_Click" Tag="{Binding}"/>
                                        <Button Content="Удал." Width="60"
                                                Click="BtnDelete_Click" Tag="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
