<UserControl x:Class="CourseProgect_Planeta35.Pages.CategoriesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F1E9">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Margin="0 0 0 20">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="Категории имущества"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"/>
                <TextBlock x:Name="CountText"
                           Margin="0 4 0 0"
                           Foreground="#6A6A6A"/>
            </StackPanel>

            <Button DockPanel.Dock="Right"
                    Width="200"
                    Height="42"
                    Click="AddCategory_Click"
                    Background="#8B9B4C"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="+" FontSize="18" Margin="0 0 8 0"/>
                    <TextBlock Text="Добавить категорию"/>
                </StackPanel>
            </Button>
        </DockPanel>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="CategoryPanel"
                       Orientation="Horizontal"/>
        </ScrollViewer>

    </Grid>
</UserControl>
