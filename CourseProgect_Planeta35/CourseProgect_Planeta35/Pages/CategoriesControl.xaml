<UserControl x:Class="CourseProgect_Planeta35.Pages.CategoriesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F1E9">

    <UserControl.Resources>
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="BorderBrush" Value="#D2D5C4"/>
            <Setter Property="Background" Value="#8B9B4C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Margin="0 0 0 20">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="Категории имущества"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"/>
                <TextBlock x:Name="CountText"
                           Margin="0 4 0 0"
                           Foreground="#6A6A6A"/>
            </StackPanel>

            <Button DockPanel.Dock="Right"
                    Width="200"
                    Height="42"
                    Click="AddCategory_Click"
                    Background="#8B9B4C"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Style="{StaticResource MainButton}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="+" FontSize="18" Margin="0 -6 8 0"/>
                    <TextBlock Text="Добавить категорию"/>
                </StackPanel>
            </Button>
        </DockPanel>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="CategoryPanel"
                       Orientation="Horizontal"/>
        </ScrollViewer>
    </Grid>
</UserControl>
